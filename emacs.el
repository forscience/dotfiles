;; Inhibit the startup message
(setq inhibit-startup-message t)

;; Enable syntax highlighting
(global-font-lock-mode t)

;; Hide the menu bar
(menu-bar-mode 0)

;; Suppress backup files
(setq make-backup-files nil)

;; Enable line numbers
(global-linum-mode t)
(setq linum-format "%d ")
